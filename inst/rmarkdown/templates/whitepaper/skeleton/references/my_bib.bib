	journal = {Annals of Emergency Medicine},
	author = {Krawczyk, Noa and Eisenberg, Matthew and Schneider, Kristin E. and Richards, Tom M. and Lyons, B. Casey and Jackson, Kate and Ferris, Lindsey and Weiner, Jonathan P. and Saloner, Brendan},
